@model WineForum.Models.Forum.AddForumModel


<div class="container body-content">
    <div class="row sectionHeaderForum">
        <div class="sectionHeading">
            Създаване на форум
        </div>
    </div>
    <div class="row forumCreate">
            <div id="createForumSection">
                <form asp-action="AddForum" method="post" id="createForumForm" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title">Заглавие</label>
                        <br />
                        <input asp-for="Title" class="form-control"required placeholder="Заглавие" oninvalid="this.setCustomValidity('Моля добавете заглавие')"
    oninput="this.setCustomValidity('')" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Описание на форум</label>
                        <br />
                        <input asp-for="Description" class="form-control"required placeholder="Описание" oninvalid="this.setCustomValidity('Моля въведете описание')"
    oninput="this.setCustomValidity('')" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div id="upload">
                        <label>Прикачване на снимка</label>
                        <br />
                        <label class="btn btn-default btn-file">
                            Търси <input asp-for="ImageUpload" typeof="file" style="display: none" >
                        </label>
                    </div>

                    <div class="row" id="rowDivider"></div>
                    
                        <button type="submit" id="newFormBtn" class="btn btn-submitPost">Създаване на форум</button>
                
                </form>
            </div>
    </div>
    
</div>